{% use 'tailwind_2_layout.html.twig' %}

{% block widget_attributes %}
    {% set widget_class = widget_class|default('mt-1 w-full rounded-lg') %}
    {{ parent() }}
{% endblock %}

{% block form_errors %}
    {% set error_item_class = error_item_class|default('text-red-700 text-xs') %}
    {{ parent() }}
{% endblock %}

{% block datetime_widget %}
    {% set attr = attr|merge({ class: attr.class|default('flex w-full items-center gap-3') }) %}
    {{ parent() }}
{% endblock %}

{% block date_widget %}
    {% set attr = attr|merge({ class: attr.class|default('flex w-full items-center gap-3') }) %}
    {{ parent() }}
{% endblock %}

{% block time_widget %}
    {% set attr = attr|merge({ class: attr.class|default('flex w-full items-center gap-3') }) %}
    {{ parent() }}
{% endblock %}
