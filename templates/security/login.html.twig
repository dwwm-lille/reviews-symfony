{% extends 'base.html.twig' %}

{% block title %}Connexion - {{ parent() }}{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto border my-4 py-10 px-20">
    <form method="post">
        <h1 class="text-center text-3xl mb-6">Connexion</h1>

        {% if error %}
            <div class="mb-6 text-red-600">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Bonjour {{ app.user.name }}. <a href="{{ path('app_logout') }}">DÃ©connexion</a>
            </div>
        {% endif %}

        <div class="mb-3">
            <label for="inputEmail" class="block mb-1">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-full" autocomplete="email" required autofocus>
        </div>

        <div class="mb-3">
            <label for="inputPassword" class="block mb-1">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="w-full" autocomplete="current-password" required>
        </div>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="bg-slate-500 text-white py-2 px-3 hover:bg-slate-400 rounded-lg block w-full mt-10">
            Connexion
        </button>
    </form>
</div>
{% endblock %}
