<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Reviews{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="flex min-h-screen">
            <header class="w-1/5 p-8 bg-indigo-700 text-white">
                <nav class="flex flex-col gap-4">
                    <a href="{{ path('app_admin_review_index') }}">Reviews</a>
                    <a href="{{ path('app_home') }}">Retour au site</a>
                </nav>
            </header>

            <div class="max-w-5xl mx-auto flex-grow">
                {% block body %}{% endblock %}
            </div>
        </div>
    </body>
</html>
